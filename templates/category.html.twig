{% extends 'layout/base.html.twig' %}

{% block title %}
ІУС Новини - Категорії
{% endblock %}

{% block body %}

<div class="example-wrapper">
    <div class="container">
        <div class="row py-5">
            <h1 class="text-center mb-5">Категорії</h1>
            {% for category in categories %}
            <div class="col-6">

                <a href="/news?category={{ category.id }}">
                    <div class="card category-card  mb-3">
                        <img src="{{category.url}}" class="news-img card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.name }}</h5>
                        </div>
                    </div>
                </a>

            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
